
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="auto-form-wrapper">
    <form action="Login" method="post">
        <div class="form-group">
            <p style="color:red"> @ViewBag.er </p> <br />
            <label class="label">Username</label>
            <div class="input-group">
                <input type="text" class="form-control" name="us" placeholder="Username" required="" autofocus="">
                <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="mdi mdi-check-circle-outline"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="label">Password</label>
            <div class="input-group">
                <input type="password" class="form-control" name="mk" required=""  placeholder="*********">
                <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="mdi mdi-check-circle-outline"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary submit-btn btn-block">Login</button>
        </div>
     
      
        <div class="text-block text-center my-3">
            <span class="text-small font-weight-semibold">Not a member ?</span>
            <a href="/Users/Register" class="text-black text-small">Create new account</a>
        </div>
    </form>
</div>

