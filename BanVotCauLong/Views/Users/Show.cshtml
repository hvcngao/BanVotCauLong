@model PagedList.IPagedList<BanVotCauLong.Models.Entities.Racket>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    //int u = (int)Session["username"];
}
<head>
    <link href="~/css/new/style1.css" rel="stylesheet" />
    <link href="~/css/new/StyleSheet1.css" rel="stylesheet" />

    <link rel="stylesheet" href="../../vendors/iconfonts/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../vendors/icheck/skins/all.css">
    <link rel="stylesheet" href="../../css/style.css">
    <link rel="shortcut icon" href="../../images/favicon.png">
 
</head>

<h2>Show</h2>
@if (Session["username"] == null)
{
   <!-- <a href="/Users/Login"> Đăng Nhập để xem chi tiết</a> <br /> --> 
}

@using (@Html.BeginForm())
{
<p>
    Sắp Xếp: @Html.ActionLink("Giá từ cao xuống thấp", "Show", new { sO = "DP" }) <span> | </span>
            @Html.ActionLink("Giá từ thấp đến cao", "Show", new { sO = "P" })<span>   &nbsp;&nbsp;   </span>
         Tên Vợt: @Html.TextBox("SearchString") <input type="submit" value="Tìm kiếm" />
</p>

<div class="center_content">
    <div class="center_title_bar">Latest Products</div>
    @foreach (var item in Model)
    {    
        <div class="prod_box">
            <div class="center_prod_box">
                <div class="product_title"><a href="/Rackets/Details/@item.IdRacket">@item.NameRacket</a></div>
                <div class="product_img"><a href="/Rackets/Details/@item.IdRacket"><img src="~/HinhAnh/@item.ImageLink" class="ImageImportant" alt="" border="0"></a></div>
                <div class="prod_price"><span class="reduce">@item.Price</span> <span class="price">@item.Price</span></div>
            </div>
            <div class="prod_details_tab"> <a href="/ShoppingCart/Add/@item.IdRacket" class="prod_buy">Add to Cart</a> <a href="/Rackets/Details/@item.IdRacket" class="prod_details">Details</a> </div>
        </div>  
    }

    
    <br /><br />
    <div class="center_title_bar">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)   /  @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Show", new { page }))</div>
</div>
}

    <!-- Kết thúc -->

    <script src="~/css/new/boxOver.js"></script>">


